{
    "Successful User Registration": {
        "description": "Successful User Registration with valid credentials",
        "request": {
            "method": "POST",
            "url": "https://51790c60-29ec-429c-9ce1-5da259f03d0d.mock.pstmn.io/register",
            "headers": {
                "Content-Type": "application/json"
            },
            "body": {
                "full_name": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 255
                },
                "email": {
                    "type": "string",
                    "format": "email"
                },
                "user_name": {
                    "type": "string",
                    "minLength": 6,
                    "maxLength": 56,
                    "pattern": "^[a-zA-Z0-9]+$"
                },
                "password": {
                    "type": "string",
                    "minLength": 8,
                    "maxLength": 46,
                    "pattern": "^(?=.*[a-zA-Z])(?=.*[0-9])(?=.*[@#$%^&+=]).*$"
                },
                "confirm_password": {
                    "type": "string"
                }
            }
        },
        "example": [
            {
                "full_name": "John Doe",
                "email": "test1@example.com",
                "user_name": "testuser1",
                "password": "TestP@ss123",
                "confirm_password": "TestP@ss123"
            }
        ],
        "response": {
            "status": 200,
            "body": {
              "status": "OK",
              "message": "Successful registration"
          },
            "required": ["full_name", "email", "user_name", "password", "confirm_password"]
        }
    },

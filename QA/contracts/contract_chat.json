    "Successful Join a Chat Room": {
        "description": "Join a Chat Room with the correct parameters",
        "request": {
            "method": "GET",
            "url": "https://51790c60-29ec-429c-9ce1-5da259f03d0d.mock.pstmn.io//join-room/1?userId=456&username=Paula",
            "headers": {
                "Content-Type": "application/json"
            },
            "body": {
                "roomId": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The unique ID of a room chat."
                },
                "userId": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The unique ID of a user."
                },
                "username": {
                    "type": "string",
                    "minLength": 1,
                    "description": "The username of a user."

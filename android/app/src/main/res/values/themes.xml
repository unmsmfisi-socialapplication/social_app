<resources>

    <style name="Base.Theme.Social" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.Social" parent="Base.Theme.Social">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ButtonStyleSocial">
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="TextViewLinked">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/color01</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>
<resources>

    <style name="Base.Theme.Social" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color01</item>
    </style>

    <style name="Theme.Social" parent="Base.Theme.Social">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <item name="colorPrimary">@color/color01</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/color01</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ButtonStyleSocial">
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="boxStrokeColor">@color/color01</item>
        <item name="hintTextColor">@color/color01</item>
        <item name="startIconTint">@color/color01</item>
    </style>

    <style name="TextInputEditTextNumberStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextInputLayoutNumberStyle">
        <item name="boxStrokeColor">@color/color01</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="TextViewLinked">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/color01</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewError">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="EditTextStyle">
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="android:background">@color/color04</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IconButtonStyle">
        <item name="cornerRadius">10dp</item>
        <item name="android:background">@color/color04</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="ImageViewProfile">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageViewCorner">
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
    </style>

    <style name="ButtonStyleProfile">
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color01</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/color01</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="ButtonStyleProfile2">
        <item name="android:layout_width">1dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="ImageIconNavBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">22.5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ImageIconPost">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ImagePostRound">
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeBottomLeft">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
    </style>

    <style name="ImagePostCreateRound">
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
    </style>

    <style name="ImagePostContent">
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
    </style>

    <style name="ImageViewBottomRadius">
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="ImageIconHead">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="ButtonStylePost">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/color01</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="EditTexContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="startIconTint">@color/color01</item>
    </style>
</resources>
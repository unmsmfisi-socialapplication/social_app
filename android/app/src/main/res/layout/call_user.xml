<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_radius_style"
        android:gravity="center_vertical"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:src="@drawable/icon_arrow_back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call_in_progress"
            android:fontFamily="@font/poppins_light"
            android:background="@color/transparent"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/contactCallProfile"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/defaul_user_profile"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/contactCallName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textSize="28dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contactCallTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/color03"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:text="callTime"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="35dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp">

                <ImageButton
                    android:id="@+id/btnSpeaker"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/color01"
                    android:src="@drawable/icon_speaker"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txtSpeaker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/color01"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/speaker"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp">

                <ImageButton
                    android:id="@+id/btnMicrophone"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/color01"
                    android:src="@drawable/icon_microphone"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txtMicrophone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/color01"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/mute"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp">

                <ImageButton
                    android:id="@+id/btnVideoCamera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_style"
                    android:backgroundTint="@color/color01"
                    android:src="@drawable/icon_video_camera"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txtVideoCamera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@color/color01"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/video_camera"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">

            <ImageButton
                android:id="@+id/btnEndCall"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/round_style"
                android:backgroundTint="@color/red"
                android:src="@drawable/icon_end_call"
                android:rotation="180"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/txtEndCall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="@string/end_call"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/comment_imageProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/defaul_user_profile"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/style_border_5dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:backgroundTint="@color/gray">

            <TextView
                android:id="@+id/txt_usernamePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14sp"
                android:backgroundTint="@color/transparent"/>

            <TextView
                android:id="@+id/txt_userComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/comment_user"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:backgroundTint="@color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/txt_timeComment"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="@string/time_comment"
                android:fontFamily="@font/poppins"
                android:textSize="9sp"
                android:backgroundTint="@color/transparent"/>

            <TextView
                android:id="@+id/txt_reactionComment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent"
                android:fontFamily="@font/poppins"
                android:text="@string/reaction_comment"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/txt_replyComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reply_comment"
                android:fontFamily="@font/poppins"
                android:textSize="9sp"
                android:backgroundTint="@color/transparent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="end|center">

                <TextView
                    android:id="@+id/txt_countReactionComment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/count_reaction_comment"
                    android:fontFamily="@font/poppins"
                    android:textSize="9sp"
                    android:layout_marginRight="2dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/transparent"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/icon_reaction_comment_like"
                    app:srcCompat="@drawable/post_icon_like_bold"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:id="@+id/icon_reaction_comment_iLove"
                    app:srcCompat="@drawable/post_icon_heart_bold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>